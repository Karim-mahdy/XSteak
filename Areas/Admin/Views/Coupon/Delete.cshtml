@model Coupon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info text-right">حذف الكوبون</h2>
<br />
<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <div class=" border backgroundWhite">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="Picture" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" disabled id="projectImage" multiple class="form-control" />
            </div>

        </div>

        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" disabled class="form-control" />
            </div>
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="MinimumAmount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="MinimumAmount" disabled class="form-control" />
            </div>
            <span asp-validation-for="MinimumAmount" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CouponType" disabled asp-items="@Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="IsActive" disabled class="form-control" />
            </div>

        </div>

        <div class="form-group row">
            <div class="col-6"></div>
            <div class="col-6">
                <partial name="_DeleteAndBackToListButton" model="@Model.Id" />
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}