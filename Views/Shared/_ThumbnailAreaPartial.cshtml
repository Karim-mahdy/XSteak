@model IEnumerable<MenuItem>

@if (Model.Count()>0)
{
<div class="col-12 post @Model.FirstOrDefault().SubCategory.Category.Name.Replace(" ",string.Empty) menu-restaurant">
    <div class="row">
        <h3 class="text-success">@Model.FirstOrDefault().SubCategory.Category.Name</h3>
    </div>
    @foreach (var item in Model)
    {
        <div class="border border-info rounded col-12" style="margin-bottom:10px;margin-top:10px;padding:10px">
            <div class="row">
                <div class="col-md-3 col-sm-12">
                    <img src="@item.Image" width="99%" style="border-radius:5px;border:1px solid #bbb9b9" />
                </div>
                <div class="col-md-9 col-sm-12">
                    <div class="row pr-3">
                        <div class="col-8 row">
                            <p class="text-primary text-right ml-2" style="font-size:21px;color:maroon">@item.Name</p>
                            @if (item.Spicyness == "1")
                            {
                                <img src="~/Images/notSpicy.png" title="Mild" width="30px" height="30px" />
                            }
                            @if (item.Spicyness == "2")
                            {
                                <img src="~/Images/Spicy.png" title="Spicy" width="30px" height="30px" />
                            }
                            @if (item.Spicyness == "3")
                            {
                                <img src="~/Images/verySpicy.png" title="VerySpicy" width="35px" height="35px" />
                            }
                        </div>
                        <div class="col-4 text-left" style="color:maroon">
                            <h4>@item.Price ج</h4>
                        </div>
                    </div>
                 
                    <div class="row col-12 text-justify d-none d-md-block text-right">
                        <p>@Html.Raw(item.Descrition)</p>
                    </div>                                                            
                </div>
                <div class="col-9"></div>
                <div class="col-3">
                    <a asp-action="Detials"  class="btn btn-success form-control" asp-route-id="@item.Id">اطلب الأن</a>
                </div>

            </div>

        </div>
    }
    <div class="p-4"></div>
</div>
}
